<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://browseCaption">
    <data>
        <collection id="categoryDc"
                              class="akkount.entity.Category"
                              fetchPlan="_base">
            <loader>
                <query>
                    <![CDATA[select e from akk_Category e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout spacing="true">
        <table id="categoryTable"
               height="100%"
               width="100%" dataContainer="categoryDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="description"/>
                <column id="catType"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="categoryTable.create"/>
                <button id="editBtn"
                        action="categoryTable.edit"/>
                <button id="removeBtn"
                        action="categoryTable.remove"/>
                <button id="refreshBtn"
                        action="categoryTable.refresh"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
