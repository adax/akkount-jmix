<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://browseCaption"
        focusComponent="operationTable">
    <data>
        <collection id="operationsDc"
                         class="akkount.entity.Operation"
                         fetchPlan="operation-browse">
            <loader id="operationsDl">
                <query>
                    <![CDATA[select e from akk_Operation e order by e.opDate desc, e.createTs desc]]>
                </query>
            </loader>
        </collection>
        <collection id="accountsDc" class="akkount.entity.Account">
            <loader id="accountsDl">
                <query>
                    select e from akk_Account e where e.active = true order by e.name
                </query>
            </loader>
        </collection>
        <collection id="categoriesDc" class="akkount.entity.Category">
            <loader id="categoriesDl">
                <query>
                    select e from akk_Category e order by e.name
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="operationTable"
            spacing="true">
        <hbox spacing="true" width="100%" expand="filterSpacer">
            <label value="Filter by" align="MIDDLE_LEFT"/>
            <entityComboBox id="accFilterField" optionsContainer="accountsDc" inputPrompt="Account" width="200">
                <actions>
                    <action id="clear" type="entity_clear"/>
                </actions>
            </entityComboBox>
            <entityComboBox id="categoryFilterField" optionsContainer="categoriesDc" inputPrompt="Category" width="200">
                <actions>
                    <action id="clear" type="entity_clear"/>
                </actions>
            </entityComboBox>
            <label id="filterSpacer"/>
            <checkBox id="showGenericFilterCheckbox" caption="Show generic filter" align="MIDDLE_RIGHT"/>
        </hbox>
        <filter id="filter" caption="Generic filter" collapsed="true" visible="false"
                dataLoader="operationsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="operationTable"
                    width="100%" dataContainer="operationsDc" multiselect="true">
            <actions>
                <action id="createExpense" caption="msg://akkount.entity/OperationType.EXPENSE" shortcut="CTRL-SHIFT-KEY1"/>
                <action id="createIncome" caption="msg://akkount.entity/OperationType.INCOME" shortcut="CTRL-SHIFT-KEY2"/>
                <action id="createTransfer" caption="msg://akkount.entity/OperationType.TRANSFER" shortcut="CTRL-SHIFT-KEY3"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="excel" type="excelExport"/>
            </actions>
            <columns>
                <column id="opType"/>
                <column id="opDate">
                    <formatter>
                        <date format="msg://opDateFormat"/>
                    </formatter>
                </column>
                <column id="acc1"/>
                <column id="amount1">
                    <formatter>
                        <custom bean="akk_DecimalFormatter"/>
                    </formatter>
                </column>
                <column id="acc2"/>
                <column id="amount2">
                    <formatter>
                        <custom bean="akk_DecimalFormatter"/>
                    </formatter>
                </column>
                <column id="category"/>
                <column id="comments"/>
                <column id="createdBy"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createExpenseBtn" action="operationTable.createExpense"/>
                <button id="createIncomeBtn" action="operationTable.createIncome"/>
                <button id="createTransferBtn" action="operationTable.createTransfer"/>
                <button id="editBtn"
                        action="operationTable.edit"/>
                <button id="removeBtn"
                        action="operationTable.remove"/>
                <button action="operationTable.excel"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
