<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window">
    <data>
        <collection id="categoriesDc"
                              class="akkount.entity.Category"
                              fetchPlan="_instance_name">
            <loader>
                <query>
                    <![CDATA[select e from akk_Category e where e.catType = 'I' order by e.name]]>
                </query>
            </loader>
        </collection>
        <instance id="operationDc"
                  class="akkount.entity.Operation"
                  fetchPlan="operation-edit"
                  provided="true"/>
        <collection id="accountsDc" class="akkount.entity.Account" fetchPlan="_local" provided="true"/>
    </data>
    <layout>
        <gridLayout spacing="true"
              width="100%">
            <columns>
                <column flex="0.0"/>
                <column flex="1.0"/>
            </columns>
            <rows>
                <row>
                    <label value="msg://account"/>
                    <entityComboBox dataContainer="operationDc"
                                       optionsContainer="accountsDc"
                                       property="acc2"
                                       required="true"
                                       width="100%">
                        <actions>
                            <action id="lookup" type="entity_lookup"/>
                        </actions>
                    </entityComboBox>
                </row>
                <row>
                    <label value="msg://amount"/>
                    <hbox spacing="true"
                          width="100%">
                        <textField id="amountField"
                                   required="true"
                                   requiredMessage="msg://amountIsRequired"
                                   width="100%"/>
                        <label id="currencyLab"
                               align="MIDDLE_LEFT"
                               width="30px"/>
                    </hbox>
                </row>
                <row>
                    <label value="msg://category"/>
                    <entityComboBox dataContainer="operationDc"
                                       optionsContainer="categoriesDc"
                                       property="category"
                                       width="100%">
                        <actions>
                            <action id="lookup" type="entity_lookup"/>
                        </actions>
                    </entityComboBox>
                </row>
                <row>
                    <label value="msg://comment"/>
                    <textArea dataContainer="operationDc"
                              property="comments"
                              rows="3"
                              width="100%"/>
                </row>
            </rows>
        </gridLayout>
    </layout>
</window>
