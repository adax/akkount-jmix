<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://editCaption">
    <data>
        <instance id="operationDc"
                  class="akkount.entity.Operation"
                  fetchPlan="operation-edit">
            <loader/>
        </instance>
        <collection id="accountsDc"
                    class="akkount.entity.Account"
                    fetchPlan="_local">
            <loader id="accountsDl">
                <query><![CDATA[select e from akk_Account e order by e.name]]></query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="editActions"
            margin="true"
            spacing="true">
        <hbox spacing="true">
            <label align="MIDDLE_LEFT"
                   value="msg://dateLab"/>
            <dateField dataContainer="operationDc"
                       property="opDate"/>
            <label id="weekDayLab" align="MIDDLE_LEFT" dataContainer="operationDc" property="opDate">
                <formatter>
                    <date format="EEEE"/>
                </formatter>
            </label>
        </hbox>
        <groupBox id="frameContainer"
                  stylename="light"
                  width="400px"/>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
