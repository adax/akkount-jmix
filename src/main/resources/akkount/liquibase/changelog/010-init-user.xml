<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="akkount">

        <addColumn tableName="SEC_USER" >
            <column name="USERNAME" type="varchar(255)"/>
            <column name="ENABLED" type="boolean"/>
        </addColumn>

    </changeSet>

    <changeSet id="2" author="akkount">

        <update tableName="SEC_USER">
            <column name="USERNAME" valueComputed="LOGIN_LC"/>
            <column name="ENABLED" valueComputed="ACTIVE"/>
            <column name="PASSWORD" valueComputed="'{' || PASSWORD_ENCRYPTION || '}' || PASSWORD"/>
        </update>

    </changeSet>

    <changeSet id="3" author="akkount">

        <insert tableName="SEC_USER">
            <column name="ID" value="a0eab5b0-0e93-4390-8a3e-132b605550d9"/>
            <column name="VERSION" value="1"/>
            <column name="USERNAME" value="jmix"/>
            <column name="PASSWORD" value="{noop}jmix"/>
            <column name="ENABLED" value="true"/>

            <column name="LOGIN" value="jmix"/>
            <column name="LOGIN_LC" value="jmix"/>
        </insert>

    </changeSet>

    <changeSet id="4" author="akkount">

        <insert tableName="SEC_ROLE_ASSIGNMENT_ENTITY">
            <column name="ID" value="b44d6d0f-98ce-4e15-806f-f0062d5d49ad"/>
            <column name="VERSION" value="1"/>
            <column name="USER_KEY" value="jmix"/>
            <column name="ROLE_CODE" value="system-full-access"/>
        </insert>

    </changeSet>

</databaseChangeLog>
