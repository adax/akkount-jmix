    <changeSet id="13" author="akkount">
        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="AKK_USER_DATA"
                                 constraintName="FK_AKK_USER_DATA_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="SEC_USER"/>
    </changeSet>
</databaseChangeLog>